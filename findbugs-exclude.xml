<?xml version="1.0" encoding="UTF-8"?>
<FindBugsFilter>
    <!-- we're *supposed* to manually GC there -->
    <Match>
        <Class name="com.codahale.dropwizard.tasks.GarbageCollectionTask"/>
        <Method name="execute"/>
        <Bug pattern="DM_GC"/>
    </Match>

    <!-- given this is a console command, exit(-1) is right -->
    <Match>
        <Class name="com.codahale.dropwizard.server.commands.ServerCommand"/>
        <Method name="run"/>
        <Bug pattern="DM_EXIT"/>
    </Match>
    <Match>
        <Class name="com.codahale.dropwizard.cli.Cli"/>
        <Method name="run"/>
        <Bug pattern="DM_EXIT"/>
    </Match>

    <!-- don't really care about servlet serialization -->
    <Match>
        <Bug pattern="SE_TRANSIENT_FIELD_NOT_RESTORED"/>
    </Match>
    <Match>
        <Class name="com.codahale.dropwizard.tasks.TaskServlet"/>
        <Bug pattern="SE_BAD_FIELD"/>
    </Match>
    <Match>
        <Class name="com.codahale.dropwizard.servlets.assets.AssetServlet"/>
        <Bug pattern="SE_BAD_FIELD"/>
    </Match>

    <!-- or this crap -->
    <Match>
        <Class name="com.codahale.dropwizard.hibernate.ManagedSessionFactory"/>
        <Bug pattern="SE_BAD_FIELD"/>
    </Match>
</FindBugsFilter>
